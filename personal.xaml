<Window x:Class="WpfPract1.personal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPract1"
        mc:Ignorable="d"
        Title="personal" Height="350" Width="700" MinHeight="250" MinWidth="700" MaxHeight="350" MaxWidth="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name = "Pers_accDataGrid" HorizontalAlignment="Left" Margin="150 50" AutoGeneratedColumns="Pers_accDataGrid_AutoGeneratedColumns" SelectionChanged="Pers_accDataGrid_SelectionChanged"/>
        <Button Content="назад" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30 10" Width="50" Height="20" Click="Button_Click"/>
        <Button Content="добавить" HorizontalAlignment="Left" Margin="30 10" VerticalAlignment="Bottom" Width="90" Click="Button_Click_1"/>
        <TextBlock Text="имя" HorizontalAlignment="Left" Margin="30 140" VerticalAlignment="Bottom"/>
        <TextBox x:Name="name" HorizontalAlignment="Left" Margin="30 120" VerticalAlignment="Bottom" Width="90"/>
        <TextBlock Text="порода" HorizontalAlignment="Left" Margin="30 100" VerticalAlignment="Bottom"/>
        <TextBox x:Name="poroda" HorizontalAlignment="Left" Margin="30 80" VerticalAlignment="Bottom" Width="90"/>
        <TextBlock Text="номер вида" HorizontalAlignment="Left" Margin="30 60" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="species" HorizontalAlignment="Left" Margin="30 40" VerticalAlignment="Bottom" Width="90" Height="19"/>
        <Button Content="изменить" HorizontalAlignment="Left" Margin="130 10" VerticalAlignment="Bottom" Width="90" Click="Button_Click_3"/>
        <Button Content="удалить" HorizontalAlignment="Left" Margin="230 10" VerticalAlignment="Bottom" Width="90" Click="Button_Click_2"/>
    </Grid>

</Window>
